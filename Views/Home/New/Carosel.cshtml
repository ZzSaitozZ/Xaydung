<div id="carouselTitle" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselTitle" data-slide-to="0" class="active"></li>
        <li data-target="#carouselTitle" data-slide-to="1"></li>
        <li data-target="#carouselTitle" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img style="width:100%; height:400px" src="~/Resources/Images/Index/bewater.jpg" />
            <div class="carousel-caption d-none d-md-block Caroselfix">
                <h2>@Resources.Carousel.first</h2>
                <H2>@Resources.Carousel.first1</H2>
                <h5 style="font-style:italic;font-weight:bold">@Resources.Carousel.first2</h5>
                <h5 style="font-style:italic;font-weight:bold">@Resources.Carousel.first3</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img style="width:100%; height:400px" src="~/Resources/Images/Index/water.jpeg" />
            <div class="carousel-caption d-none d-md-block Caroselfix">
                <h3>@Resources.Carousel.second</h3>
                <h5 style="font-style:italic;font-weight:bold">@Resources.Carousel.second1</h5>
                <h5 style="font-style:italic;font-weight:bold">@Resources.Carousel.second2</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img style="width:100%; height:400px" src="~/Resources/Images/Index/waterwaste.jpg" />
            <div class="carousel-caption d-none d-md-block Caroselfix">
                <h3>@Resources.Carousel.third</h3>
                <h5 style="font-style:italic;font-weight:bold">@Resources.Carousel.third1</h5>
                <h5 style="font-style:italic;font-weight:bold">@Resources.Carousel.third2</h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev CaroselBtn" href="#carouselTitle" role="button" data-slide="prev" style="width:5%">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next CaroselBtn" href="#carouselTitle" role="button" data-slide="next" style="width:5%">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>